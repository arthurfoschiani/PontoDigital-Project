@{
    var User = (string) ViewData["User"];
    var tipo = (string) ViewData["Tipo"];
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Arthur</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    @if ("Login".Equals((string) ViewData["NomeView"])) {
        <link href="~/css/login.css" rel="stylesheet">
    } else if ("Cadastro".Equals((string) ViewData["NomeView"])) {
        <link href="~/css/cadastro.css" rel="stylesheet" type="text/css">
    } else if ("Depoimentos".Equals((string) ViewData["NomeView"])) {
        <link href="~/css/depoimentos.css" rel="stylesheet" type="text/css">
    } else if ("Comentar".Equals((string) ViewData["NomeView"])) {
        <link href="~/css/comentario.css" rel="stylesheet">
    }
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <img src="~/images/Logo.png" alt="">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a asp-controller="Home" asp-action="Index" class="nav-link">home</a>
                    </li>
                    @if (string.IsNullOrEmpty(tipo)) {
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Index", "Home")#PRODUT'>produto</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Index", "Home")#PLAN'>planos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href='@Url.Action("Index", "Home")#QUEM_SOMO'>quem somos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Depoimentos" asp-action="Index">depoimentos</a>
                        </li>
                    } else if (!string.IsNullOrEmpty(tipo)) {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="DashBoard" asp-action="Index">dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Depoimentos" asp-action="Index">comentários</a>
                        </li>
                    }
                    @if(string.IsNullOrEmpty(User)) {
                        <li class="nav-item">
                            <a id="bt_login" class="nav-link" asp-controller="Login" asp-action="Index">login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Cadastro" asp-action="Index">cadastro</a>
                        </li>
                    } else {
                        <li class="nav-item">
                            <a id="bt_logout" class="nav-link" asp-controller="Login" asp-action="EfetuarLogout">logout</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>
    </header>
    @RenderBody()
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
